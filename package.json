{
  "name": "gr8",
  "version": "1.0.0",
  "description": "gr8 is both a **set** of functional css utilities, as well as a **tool** for generating functional css utilities.",
  "main": "dist/gr8.js",
  "devDependencies": {
    "browserify": "^13.3.0",
    "colortape": "^0.1.2",
    "onchange": "^3.2.1",
    "tape": "^4.6.3",
    "tape-run": "^2.1.5",
    "uglify-js": "^2.7.5"
  },
  "scripts": {
    "test": "node tests/index.js | colortape && browserify tests/browser.js | tape-run | colortape",
    "dist-js": "browserify src/index.js -s gr8 | uglifyjs -m -c > dist/gr8.js",
    "dist-css": "node bin/gnr8.js",
    "dox": "node bin/dox/index.js",
    "watch-dox": "onchange 'bin/dox/' -- npm run dox",
    "dist": "npm run dist-js && npm run dist-css && npm run dox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://amongiants@bitbucket.org/amongiants/gr8.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/amongiants/gr8#readme",
  "dependencies": {}
}
